                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label
                    Text="Easy"
                    Grid.Column="0"
                    Grid.Row="0"/>
                <Entry
                    
                
            </Grid>
    </ScrollView>

</ContentPage>