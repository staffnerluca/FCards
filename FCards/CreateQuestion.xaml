<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FCards.CreateQuestion"
             Title="CreateQuestion">
    <VerticalStackLayout>
        <Label 
            x:Name="lblQuestionID"
            Text="enter QID here!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Editor
                x:Name="eQuestion"
                HeightRequest="200"
                WidthRequest="1000"
                BackgroundColor="Grey"
                TextColor="White"
                />

        <Editor
                x:Name="eAnswer"
                HeightRequest="200"
                WidthRequest="1000"
                BackgroundColor="Grey"
                TextColor="White"/>

        <Button
            x:Name="btnSave"
            Clicked="SavedPressed"/>
        
        <Button
                x:Name="btnStudy"
                Clicked="StudyPressed"
                Text="Study"
                />
    </VerticalStackLayout>
</ContentPage>